MDScreen:
    name: "mood"
    md_bg_color: 233/255, 234/255, 236/255, 1
    ScrollView:
        MDGridLayout:
            md_bg_color: 233/255, 234/255, 236/255, 1
            cols:1
            size_hint_y: None
            adaptive_height: True
            font_name: "Poppins"
            font_size: 11
            MDToolbar:
                md_bg_color: 51/255, 54/255, 82/255, 1 # Color for top toolbar  rgb(5, 68, 94) or 51/255, 54/255, 82/255, 1
                id: bot_name
                text: ""
                pos_hint: {"center_y": .5}
                halign: "center"
                left_action_items: [["backspace", lambda x: app.bot_name()]]
                elevation: 8
            MDLabel:
                bold: True
                halign: "center"
                font_style: "H5"
                theme_text_color: "Custom"
                text_color: 40/255, 33/255, 32/255, 1 # rgb(40, 33, 32) 144/255, 173/255, 198/255, 1
                padding: 12, 40
                text: "Apakah perasaan anda hari ini?"
                size_hint_y: None
                height: self.texture_size[1]
            MDGridLayout:
                md_bg_color: 233/255, 234/255, 236/255, 1
                cols:2
                size_hint_y: None
                adaptive_height: True
                font_name: "Poppins"
                font_size: 11
                MDTextField:
                    id: text_mood
                    color_mode: 'custom'
                    line_color_normal: 51/255, 54/255, 82/255, 1
                    line_color_focus: 51/255, 54/255, 82/255, 1
                    font_style: "OVERLINE"
                    font_name: "Poppins"
                    theme_text_color: "Custom"
                    text_color: 51/255, 54/255, 82/255, 1
                    size_hint: 1, None
                    padding: 15
                MDIconButton:
                    icon: "send"
                    icon_size: "15sp"
                    pos_hint: {"center_x": .91, "center_y": .85}
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    md_bg_color: 144/255, 173/255, 198/255, 1 # rgb(51, 54, 82) or rgb(250, 208, 44) rgb(144, 173, 198)
                    on_release:

            MDGridLayout:
                md_bg_color: 233/255, 234/255, 236/255, 1
                cols:5
                spacing: 20, 10
                size_hint_y: None
                adaptive_height: True
                font_name: "Poppins"
                font_size: 11
                MDIconButton:
                    icon: 'emoticon-happy-outline'
                    text_color:  253/255, 253/255, 253/255, 1
                MDIconButton:
                    id: scared_emotes
                    icon: 'emoticon-confused-outline'
                MDIconButton:
                    id: sad_emotes
                    icon: 'emoticon-cry-outline'
                MDIconButton:
                    id: angry_emotes
                    icon: 'emoticon-angry-outline'
                MDIconButton:
                    id: neutral_emotes
                    icon: 'emoticon-neutral-outline'





