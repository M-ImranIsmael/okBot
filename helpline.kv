MDScreen:
    md_bg_color: 233/255, 234/255, 236/255, 1
    name: "helpline"
    ScrollView:
        MDGridLayout:
            md_bg_color: 233/255, 234/255, 236/255, 1
            cols:1
            size_hint_y: None
            adaptive_height: True
            font_name: "Poppins"
            font_size: 11
            MDToolbar:
                md_bg_color: 51/255, 54/255, 82/255, 1 # Color for top toolbar  rgb(5, 68, 94) or 51/255, 54/255, 82/255, 1
                id: bot_name
                text: ""
                pos_hint: {"center_y": .5}
                halign: "center"
                left_action_items: [["backspace", lambda x: app.bot_name()]]
                elevation: 8
            MDLabel:
                bold: True
                font_style: "H4"
                theme_text_color: "Custom"
                text_color: 51/255, 54/255, 82/255, 1
                padding: 12, 40
                text: "Talian Kecemasan"
                size_hint_y: None
                height: self.texture_size[1]
            GridLayout:
                cols: 1
                row_default_height: '48dp'
                row_force_default: True
                spacing: 23, 23
                padding: 23, 23
                size_hint_y: None
                height: self.minimum_height
                font_name: "Poppins"
                font_size: "9dp"
                ThreeLineIconListItem:
                    theme_text_color: "Custom"
                    text_color: 51/255, 54/255, 82/255, 1
                    text: "Befrienders"
                    secondary_text: "www.befrienders.org.my"
                    tertiary_text: "03-79568144/03-79568145"
                    IconLeftWidget:
                        icon: "checkbox-blank-circle"
                ThreeLineIconListItem:
                    theme_text_color: "Custom"
                    text_color: 51/255, 54/255, 82/255, 1
                    text: " MIASA: Talian Krisis"
                    secondary_text: "1-800-820066"
                    IconLeftWidget:
                        icon: "checkbox-blank-circle"
                ThreeLineIconListItem:
                    theme_text_color: "Custom"
                    text_color: 51/255, 54/255, 82/255, 1
                    text: "999"
                    secondary_text: "Nombor Kecemasan"
                    IconLeftWidget:
                        icon: "checkbox-blank-circle"

